    <input type="hidden" id="dont_track" value="{{ all_if }}" />
    {% endif %}
    <input type="hidden" class="timer_time" value="{{ settings.enable_timer_stg_custom }}" />
    <input type="hidden" id="stock_left_num1" class="stock_left_num" value="{{ leftNumber }}" />
