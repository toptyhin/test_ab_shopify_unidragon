<!-- snippets/customer-review-photo -->
{{ 'magnific-popup.css' | asset_url | stylesheet_tag }}
{{ 'jquery.magnific-popup.min.js' | asset_url | script_tag }}
<style>
  .customer-review-img {
    display:none;
    padding: 15px 0;
  }
  .img-review-slider a {
    border-radius: 2px;
    margin: 0 4px;
    height: 60px;
  }
  @media screen and (min-width:1024px){
    .img-review-slider a {
      height: 90px;
    }
  }
  
</style>
{%- if product.metafields.link.customer-review-photo != 'none' -%}
{%- assign review_photo_link = product.metafields.link.customer-review-photo | newline_to_br | split: '<br />'-%}
<div class="customer-review-img">
  <p class="line customer-review-photo">Customer reviews images </p>
  <div class="img-review-slider">
    {%- for link in review_photo_link -%}
      <a href="{{link}}"><img loading="lazy" class="lightbox-thmb arv-lozad" src="{{link}}"></a>
    {%- endfor -%}
  </div>
</div>
{%- endif -%}
<script>
    $(document).ready(function(){
    $('.img-review-slider').slick({
        slidesToShow: 4,
  		slidesToScroll: 1,
        autoplay: true,
  		autoplaySpeed: 2000,
      	arrows:false
    });
  });
  
  $(document).ready(function() {
	$('.img-review-slider').magnificPopup({
		delegate: 'a',
		type: 'image',
		tLoading: 'Loading image #%curr%...',
		mainClass: 'mfp-img-mobile',
		gallery: {
			enabled: true,
			navigateByImgClick: true,
			preload: [0,1] // Will preload 0 - before current, and 1 after the current image
		},
		image: {
			tError: '<a href="%url%">The image #%curr%</a> could not be loaded.',
		}
	});
});
</script>
