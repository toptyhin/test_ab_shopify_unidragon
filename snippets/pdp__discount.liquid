{%- if section.settings.pdp_enable_banner -%}
  <div class="new-banner-10">
    <style>
          .new-banner-10 {
            align-items: center;
            width: 100%;
            border: 1px solid #e6e6e6;
            margin-top: 30px;
            margin-bottom: 30px;
            padding-bottom: 0;
          }
          .grid__item .medium-up--one-half .new-banner-10 {
            margin-top: 0px;
            margin-bottom: 0px;
          }
    </style>
    {%- if section.settings.pdp_image_banner != blank -%}
      <img src="{{ section.settings.pdp_image_banner | img_url:'master'}}">
    {%- else -%}
      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
  </div> 
{%- else -%}
  <div class="pdp_discount">
    {% if section.settings.pdp_image != blank %}
    <div class="pdp_img">
      <img src="{{section.settings.pdp_image | img_url:'master'}}">
    </div>
    {% endif %}

    <div class="discount_content">
      {% if section.settings.pdp_title != blank %}
      <div class="pdp_title">
        <p>{{section.settings.pdp_title}}</p>
      </div>
      {% endif %}

      {% if section.settings.pdp_sub_title != blank %}
      <div class="pdp_subtitle">
        <p>{{section.settings.pdp_sub_title}}</p>
      </div>
      {% endif %}
    </div>
  </div>
{%- endif -%}