<style>

    .simple_steps-wrapper {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        padding: 50px;
    }
    .simple_item {
        display: flex;
        flex-direction: column;
    }
    .simple_item-first {
        flex: 0 1 25%;
    }
    .simple_item-second {
        flex: 0 1 35%;
    }
    .simple_item-third {
        flex: 0 1 25%;
    }
    .simple_item-content p {
        font-weight: 500;
        font-size: 14px;
        line-height: 150%;
        color: #000000;
        margin-bottom: 0;
        margin-top: 20px;
    }
    .simple_item-content {
        flex: 0 1 50%;
    }
    .simple_item-img img {
        min-height: 180px;
        max-height: 180px;
        object-fit: contain;
    }
    .simple_item-list ul {
        list-style: none;
        columns: 2;
    }
    .simple_item-list ul li {
        margin-bottom: 10px;
        flex: 0 1 40%;
    }
    .simple_item-list ul li a {
        font-weight: normal;
        font-size: 14px;
        line-height: 150%;
        color: #1A1A1A;
        text-decoration: none;
        text-transform: uppercase;
        transition: all .3s;
        display: flex;
        align-items: center;
    }
    .simple_item-list ul li a svg {
        margin-right: 5px;
    }
    .simple_item-list ul li a:hover {
        color: #FF7506;
    }
    .simple_item-button {
        background: #FF7506;
        border: 2px solid #FF7506;
        font-weight: 600;
        font-size: 18px;
        line-height: 150%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #FFFFFF!important;
        text-decoration: none;
        width: 100%;
        margin-top: 10px;
        padding: 10px 0;
    }

    @media (max-width: 1020px) {
        .simple_item-img img {
            min-height: 150px;
            max-height: 150px;
        }
        .simple_item-list ul {
            display: flex;
            flex-wrap: wrap;
            flex-direction: column;
        }
        .simple_steps-wrapper {
            flex-direction: column;
            align-items: center;
            padding: 40px 15px;
        }
    }
    @media (max-width: 767px) {
        .simple_item {
            justify-content: flex-start;
            margin-bottom: 24px;
        }
        .simple_item-list ul li {
            flex: 0 1 45%;
        }
        .simple_item-list ul li a {
            font-size: 12px;
        }
    }

</style>

