    <div class="section--fullwidth-banner" id="section--fullwidth-banner">
      <img src="{{section.settings.img | img_url: 'master' }}" alt="" title="">
    </div>
 
  <style>

 
  </style>
 
 
{% endif %}
 
{% schema %}
  {
    "name": "Full-width Banner",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_full_banner",
        "label": "Enable Fullwidth Banner",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "img",
        "label": "Default image"
      },
      {
        "type": "number",
        "id": "img_height",
        "label": "Image height in px",
            "default": 200
      }
    ],
    "presets": [
      {
        "name": "Full-width Banner",
        "category": "Image"
      }
    ]
  }
 
{% endschema %}